<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/textViewEmptyIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🛍️"
        android:textSize="72sp"
        android:alpha="0.5" />

    <TextView
        android:id="@+id/textViewEmptyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nothing here yet"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/text_primary" />

    <TextView
        android:id="@+id/textViewEmptyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Start shopping to add items"
        android:textAlignment="center"
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonEmptyAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Browse Products"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

</LinearLayout>


